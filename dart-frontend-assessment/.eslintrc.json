{
    "root": true,
    "env": {
        "browser": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "eslint:recommended",
        "@vue/typescript",
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "object-curly-spacing": ["error", "always"],
        "indent": ["error", "tab"],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"new-cap": ["error", { "capIsNew": false }]
    }
}
